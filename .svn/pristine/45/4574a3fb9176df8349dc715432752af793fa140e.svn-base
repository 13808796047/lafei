<block name="script">

<script type="text/javascript">

$(document).ready(function () {
    //多选

    //$('.selectpicker').selectpicker('refresh');
	$("#j-query").on("click", function () {
		$.ajax({
			type: "GET",
			url: '{:U("team/searchMember")}',
			data: {
                PageSize:$("#PageSize").val(),
			    utype: $('#TeamLevel').val(),
				username: $('#MemberName').val()
			},
			dataType: "html",
			global: false,
			success: function (result) {
				$('#record-span').html(result);
			}, error: function (err) {
				var t=err;

			}
		});
		//$("#teambetrecord").submit();
	});


	$('#btnSubmit').on('click', function () {
		var agent = document.getElementById('radioAgent').checked;
		var utype = agent ? 1:0;
		var name = $('#username').val();
		var action = $(this).attr('action');
		$.ajax({
			type: "POST",
			url: action,
			data: { type: utype, username: name, password: $('#PlainText').val(), fanDian: $('#range-def-val').val()},
			dataType: "json",
			global: false,
			success: function (data) {
				try {
					if (data.status == 0) {
						bootbox.alert(data.info);
					} else {

						$("#add-modal").hide();
						window.location.href=data.url;
						//bootbox.alert("操作成功");
						//$("#betrecord").submit();

					}
				} catch (e) {
					bootbox.alert("操作失败，请梢后重试");
				}
			},
			error: null,
			cache: false
		});
	});

    $("#zhuanzhang").bind('click', function () {
		$('#chongzhiTitle').text('转账给上级');
		$('#chongzhiSubmit').attr('action' , "{:U('team/chongzhiMember')}");
        $("#chongzhi_meyue").html(<?=$user['coin']?>);
        $("#chongzhi_shouusername_txt").html("转出接收账号：");
        $("#chongzhi_shouusername").attr("readonly", false);
        $("#chongzhi_shouusername").val("");
        $('#chongzhi_shouyueli').hide();
        $("#money_txt").html("转出金额：");
        $('#money').val("");
        $('#chongzhitype').val(1);
        $("#userid").val($(this).attr('userid'));
        $('#zjmm').val("");
		$('#chongzhi-modal').modal('show');
		return false;
	});

    $("#chongzhiSubmit").on('click', function () {
        var action = $(this).attr('action');
        var money = $('#money').val();
        bootbox.confirm({
            title: "<div style='padding: .4em 1em;background: #ed6c44; color: #fff;text-align: center; font-size: 14px;'>温馨提示</div>",
            message: "<div style='font-weight: bold;text-align: center;background-color: #e1ddda;height:40px;line-height: 40px;'>确定要进行此次操作?</div>",
            closeButton: false,
            className: "wocao",
            buttons: {
				confirm: {
					label: '确认'
				},
				cancel: {
					label: '取消',
					className: 'btn-cancel'
				}
            },
            callback: function (result) {
                if(result){
                  		$.ajax({
                			type: "POST",
                			url: action,
                			data: { money: money,userid:$('#userid').val(),type:$('#chongzhitype').val(),username:$.trim($('#chongzhi_shouusername').val()),zjmm:$('#zjmm').val()},
                			dataType: "json",
                			global: false,
                			success: function (data) {
                				try {
                					if (data.status == 0) {
                						bootbox.alert(data.info);
                					} else {

                						$("#add-modal").hide();
                						window.location.href=data.url;
                						//bootbox.alert("操作成功");
                						//$("#betrecord").submit();
                					}
                				} catch (e) {
                					bootbox.alert("操作失败，请梢后重试");
                				}
                			},
                			error: null,
                			cache: false
                		});
                }
            }
        });
        $(".wocao .modal-content").css("width",'400px');
        $(".wocao .bootbox-body").css("height",'45px');
        $(".wocao .modal-body").css("min-height",'40px');
        $(".wocao .modal-footer").css({"text-align":'right',"padding-bottom": "10px"});
        $(".wocao .btn").css({"min-width":"70px","font-size":"11px","margin-left":"5px","margin-right":"5px","padding-left":"15px","padding-right":"15px","height":"30px","line-height":"19px"});
        $(".wocao .btn.btn-cancel").css({"float":"right"});
    });
});


</script>


